@model DisplayCurrentPredictionViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
         ViewData["Title"] = "What Should I Eat?";
}


<form method="post">
   
    

    <div class="text-center">
        <h1>I should Eat...</h1>
      
        <div id="ShowItemContainer">
        </div>
        
        <input type="button" id="btnTryAgain" class="btn-primary" value="Try Again"/>
        <button id="btnAccept" class="btn-primary" asp-controller="WhatShouldIEat" asp-action="DisplayCurrentPrediction">Sounds Good</button>
    </div>
</form>

@section Scripts
{
    <script>
        $(document).ready(function () {

            $("#btnTryAgain").click(loadNextItem);
            loadNextItem();
        });


        function loadNextItem() {
            $('#ShowItemContainer').load("/WhatShouldIEat/ShowItem", function(txt, status, xhr) { });
        }

    </script>
    

}
