                //    timeFormat: 'h(mm)a',
                //    header: {
                //        left: 'prev,next today',
                //        center: 'title',
                //        right: 'month,basicWeek,basicDay,agenda'
                //    },
                //    eventLimit: true,
                //    eventColor: 'blue',
                //    events: events

                //});




            }
        });


    </script>    

}
