@page
@using MyKitchen.Services
@model MyKitchen.Pages.SettingsModel
@{
    Layout = "_Layout";
}

<style>
    /* HIDE RADIO */
    [type=radio] { 
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    /* IMAGE STYLES */
    [type=radio] + img {
        cursor: pointer;
    }

    /* CHECKED STYLES */
    [type=radio]:checked + img {
        outline: 2px solid #f00;
    }
</style>

<div><h3>Settings</h3></div>

<!-- Show Available Meal Icons Here-->

<div class="optionContainer">
    
    Meal Image (showsin meal list):

    @foreach (var image  in Model.Images)
    {
        <text>&nbsp;&nbsp;</text>

                <label style="margin-right: 20px;">
                    <input type="radio" name="image" value="@image">
                    <img src="/images/@image" style="width: 80px;" alt="Option 1">
                </label>
    }

</div>


