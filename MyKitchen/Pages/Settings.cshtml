@page
@using MyKitchen.Services
@model MyKitchen.Pages.SettingsModel
@{
    Layout = "_Layout";
}

<style>
    /* HIDE RADIO */
    [type=radio] { 
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    /* IMAGE STYLES */
    [type=radio] + img {
        cursor: pointer;
    }

    /* CHECKED STYLES */
    [type=radio]:checked + img {
        outline: 2px solid #f00;
    }
</style>

<div class="alert-warning">@Model.SystemMessage</div>

<div><h3>Settings</h3></div>

<!-- Show Available Meal Icons Here-->
<form method="post">


<div class="container">
    <div class="row">
        
        Meal Image (shows in meal list):

        @foreach (var image  in Model.Images)
        {
            <text>&nbsp;&nbsp;</text>

            <label style="margin-right: 20px;">
                <input type="radio" asp-for="Image" value="@image"/>
                <img src="/images/@image" style="width: 80px;" alt="Option 1">
            </label>
        }

        <div>
            <input class="btn btn-primary" asp-page-handler="SaveSettings" Value="Save" type="submit"/>
        </div>       

    </div>
    <div class="row">
        Number of Meals Per Page        
        <select asp-for="MealsPerPage" asp-items="@(Model.MealsPerPageOptionsSelectList)"></select>
        
        

    </div>




</div>


</form>


